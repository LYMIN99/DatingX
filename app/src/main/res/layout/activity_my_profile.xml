<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.me.MyProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/user_girl"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:elevation="10dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monika"
                android:transitionName="nameTransaction"
                android:textSize="25sp"
                android:fontFamily="@font/liquid"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/img_gender_sign"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="15dp"
                android:src="@drawable/women_sign"
                app:tint="@color/red_700" />
        </LinearLayout>

        <TextView

            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/grey_800"
            android:text="18 years old"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/grey_800"
            android:text="I love you so much"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">


            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_shape_white"
                android:src="@drawable/ic_settings"
                android:tint="@color/grey_800"
                android:elevation="10dp"
                android:layout_marginBottom="20dp"
                android:layout_margin="15dp"
                android:foreground="?selectableItemBackgroundBorderless"
                android:padding="6dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_shape_white"
                android:src="@drawable/ic_photo_camera"
                android:tint="@color/colorPrimary"
                android:elevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:foreground="?selectableItemBackgroundBorderless"
                android:padding="6dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/circle_shape_white"
                android:src="@drawable/ic_round_edit_24"
                android:tint="@color/grey_800"
                android:elevation="10dp"
                android:layout_margin="15dp"
                android:foreground="?selectableItemBackgroundBorderless"
                android:padding="6dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>